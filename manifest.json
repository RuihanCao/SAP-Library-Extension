{
  "name": "SAP Library Uploader",
  "description": "Capture finished SAP participation IDs and upload them to SAP Library.",
  "version": "0.2.1",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://sap-library.vercel.app/*",
    "https://api.teamwood.games/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "SAP Library Uploader",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://html-classic.itch.zone/*",
        "*://teamwood.itch.io/*",
        "*://v6p9d9t4.ssl.hwcdn.net/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://www.sap-calculator.com/*",
        "*://sap-calculator.com/*"
      ],
      "js": [
        "calculator_maps.js",
        "calculator_content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "page_hook.js",
        "battle_override.json"
      ],
      "matches": [
        "*://html-classic.itch.zone/*",
        "*://teamwood.itch.io/*",
        "*://v6p9d9t4.ssl.hwcdn.net/*"
      ]
    }
  ]
}
